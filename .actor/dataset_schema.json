{
    "actorSpecification": 1,
    "fields": {
        "type": "object",
        "properties": {
            "email": {
                "type": "string",
                "description": "The email address that was enriched"
            },
            "first_name": {
                "type": ["string", "null"],
                "description": "First name of the person associated with the email"
            },
            "last_name": {
                "type": ["string", "null"],
                "description": "Last name of the person associated with the email"
            },
            "full_name": {
                "type": ["string", "null"],
                "description": "Full name of the person associated with the email"
            },
            "company": {
                "type": ["string", "null"],
                "description": "Company or organization associated with the email"
            },
            "position": {
                "type": ["string", "null"],
                "description": "Job title or position of the person"
            },
            "country": {
                "type": ["string", "null"],
                "description": "Country where the person is located"
            },
            "gender": {
                "type": ["string", "null"],
                "description": "Gender of the person"
            },
            "website_url": {
                "type": ["string", "null"],
                "description": "Website URL associated with the person or company"
            },
            "twitter": {
                "type": ["string", "null"],
                "description": "Twitter profile URL of the person"
            },
            "linkedin": {
                "type": ["string", "null"],
                "description": "LinkedIn profile URL of the person"
            },
            "phone_number": {
                "type": ["boolean", "null"],
                "description": "Phone number associated with the person"
            },
            "score": {
                "type": ["number", "null"],
                "description": "Confidence score for the enrichment data (0-100)"
            },
            "accept_all": {
                "type": ["boolean", "null"],
                "description": "Whether the domain accepts all emails"
            },
            "verification": {
                "type": ["object", "null"],
                "description": "Email verification information",
                "properties": {
                    "date": {
                        "type": ["string", "null"],
                        "description": "Date when the email was verified"
                    },
                    "status": {
                        "type": ["string", "null"],
                        "description": "Verification status (valid, invalid, unknown, etc.)"
                    }
                }
            },
            "sources": {
                "type": ["array", "null"],
                "description": "Sources where the email information was found",
                "items": {
                    "type": "object",
                    "properties": {
                        "uri": {
                            "type": ["string", "null"],
                            "description": "URI where the email was found"
                        },
                        "website_url": {
                            "type": ["string", "null"],
                            "description": "Website URL where the email was found"
                        },
                        "extracted_on": {
                            "type": ["string", "null"],
                            "description": "Date when the email was extracted"
                        },
                        "last_seen_on": {
                            "type": ["string", "null"],
                            "description": "Date when the email was last seen"
                        },
                        "still_on_page": {
                            "type": ["boolean", "null"],
                            "description": "Whether the email is still on the page"
                        }
                    }
                }
            },
            "source": {
                "type": "string",
                "description": "Source of the enrichment data (tomba_email_enrichment)"
            },
            "error": {
                "type": ["string", "null"],
                "description": "Error message if enrichment failed"
            }
        },
        "required": ["email", "source"]
    },
    "views": {
        "overview": {
            "title": "Overview",
            "transformation": {
                "fields": ["email", "full_name", "position", "company", "website_url", "score", "error"]
            },
            "display": {
                "component": "table",
                "properties": {
                    "email": {
                        "label": "Email"
                    },
                    "full_name": {
                        "label": "Full Name"
                    },
                    "position": {
                        "label": "Position"
                    },
                    "company": {
                        "label": "Company"
                    },
                    "website_url": {
                        "label": "Website"
                    },
                    "score": {
                        "label": "Confidence Score"
                    },
                    "error": {
                        "label": "Error"
                    }
                }
            }
        },
        "detailed": {
            "title": "Detailed View",
            "transformation": {
                "fields": [
                    "email",
                    "first_name",
                    "last_name",
                    "full_name",
                    "position",
                    "company",
                    "country",
                    "gender",
                    "website_url",
                    "twitter",
                    "linkedin",
                    "phone_number",
                    "score",
                    "accept_all",
                    "verification",
                    "sources",
                    "source",
                    "error"
                ]
            },
            "display": {
                "component": "table"
            }
        },
        "enrichment_success": {
            "title": "Successful Enrichments",
            "transformation": {
                "fields": ["email", "full_name", "position", "company", "score"],
                "filterBy": [
                    {
                        "field": "error",
                        "operator": "isNull"
                    }
                ]
            },
            "display": {
                "component": "table",
                "properties": {
                    "email": {
                        "label": "Email"
                    },
                    "full_name": {
                        "label": "Full Name"
                    },
                    "position": {
                        "label": "Position"
                    },
                    "company": {
                        "label": "Company"
                    },
                    "score": {
                        "label": "Confidence Score"
                    }
                }
            }
        },
        "enrichment_errors": {
            "title": "Enrichment Errors",
            "transformation": {
                "fields": ["email", "error", "source"],
                "filterBy": [
                    {
                        "field": "error",
                        "operator": "isNotNull"
                    }
                ]
            },
            "display": {
                "component": "table",
                "properties": {
                    "email": {
                        "label": "Email"
                    },
                    "error": {
                        "label": "Error Message"
                    },
                    "source": {
                        "label": "Source"
                    }
                }
            }
        }
    }
}
